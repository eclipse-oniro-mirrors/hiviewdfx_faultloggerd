import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")
import("//build/ohos.gni")

config("processdump_config") {
  visibility = [ ":*" ]

  include_dirs = [
    ".",
    "//base/hiviewdfx/faultloggerd/common",
    "//utils/native/base/include",
    "//developtools/bytrace_standard/interfaces/innerkits/native/include",
  ]
}

ohos_source_set("process_info_src") {
  if (use_musl) {
    cflags = [ "-DDFX_LOCAL_UNWIND" ]
  }

  configs = [ ":processdump_config" ]
  sources = [
    "dfx_dump_writer.cpp",
    "dfx_elf.cpp",
    "dfx_frames.cpp",
    "dfx_log.cpp",
    "dfx_maps.cpp",
    "dfx_process.cpp",
    "dfx_signal.cpp",
    "dfx_thread.cpp",
    "dfx_unwind_remote.cpp",
    "dfx_util.cpp",
    "process_dumper.cpp",
  ]

  if (target_cpu == "arm") {
    sources += [ "dfx_regs_arm.cpp" ]
    #cflags += [ "-D__arm__" ]
  } else if (target_cpu == "arm64") {
    sources += [ "dfx_regs_arm64.cpp" ]
    cflags += [ "-D__aarch64__" ]
  } else if (target_cpu == "x86_64") {
    sources += [ "dfx_regs_x86_64.cpp" ]
    cflags += [ "-D__x86_64__" ]
  }

  deps = [
    "$faultloggerd_path/interfaces/innerkits/faultloggerd_client:libfaultloggerd",
    "//developtools/bytrace_standard/bin:bytrace_inner",
    "//third_party/libunwind:libunwind",
    "//utils/native/base:utils",
  ]

  external_deps = [ "hilog_native:libhilog" ]
}

ohos_executable("processdump") {
  install_enable = true
  configs = [ ":processdump_config" ]
  sources = [
    "cppcrash_reporter.cpp",
    "dfx_dump_writer.cpp",
    "dfx_elf.cpp",
    "dfx_frames.cpp",
    "dfx_log.cpp",
    "dfx_maps.cpp",
    "dfx_process.cpp",
    "dfx_signal.cpp",
    "dfx_thread.cpp",
    "dfx_unwind_remote.cpp",
    "dfx_util.cpp",
    "main.cpp",
    "process_dumper.cpp",
  ]

  if (target_cpu == "arm") {
    sources += [ "dfx_regs_arm.cpp" ]
    cflags = [ "-D__arm__" ]
  } else if (target_cpu == "arm64") {
    sources += [ "dfx_regs_arm64.cpp" ]
    cflags = [ "-D__aarch64__" ]
  } else if (target_cpu == "x86_64") {
    sources += [ "dfx_regs_x86_64.cpp" ]
    cflags = [ "-D__x86_64__" ]
  }

  deps = [
    "$faultloggerd_path/interfaces/innerkits/faultloggerd_client:libfaultloggerd",
    "//developtools/bytrace_standard/bin:bytrace_inner",
    "//third_party/libunwind:libunwind",
    "//utils/native/base:utils",
  ]

  if (is_standard_system) {
    external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }

  part_name = "faultloggerd"
  subsystem_name = "hiviewdfx"
}
