group("unittest") {
  testonly = true
  deps = [ ":test_unwind" ]
  if (target_cpu == "arm") {
    deps += [ ":test_exidx" ]
  }
  if (target_cpu == "arm64") {
    deps += [ ":test_dwarf" ]
  }
}
