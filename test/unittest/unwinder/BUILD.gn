import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")
import("//build/config/features.gni")
import("//build/test.gni")
module_output_path = "faultloggerd/unwinder"

ohos_unittest("test_unwinder") {
  module_out_path = module_output_path
  visibility = [ "*:*" ]
  include_dirs = [
    "$faultloggerd_path/common",
    "$faultloggerd_path/frameworks/unwinder",
  ]
  sources = [ "unwinder_test.cpp" ]
  deps = [
    "$faultloggerd_path/common/dfxutil:dfx_util",
    "$faultloggerd_path/frameworks/unwinder:dfx_unwinder_src",
    "//third_party/bounds_checking_function:libsec_shared",
    "//third_party/googletest:gtest_main",
    "//third_party/libunwind:libunwind_local",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog_native:libhilog",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":test_unwinder" ]
}
