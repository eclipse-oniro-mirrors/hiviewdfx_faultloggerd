import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")

  # current shared library is unuseful in ohos_lite type
} else {
  import("//build/config/features.gni")
  import("//build/test.gni")

  module_output_path = "faultloggerd/faultloggerd"

  ohos_fuzztest("FaultloggerdDumpCatcherFuzzTest") {
    module_out_path = module_output_path
    fuzz_config_file =
        "$faultloggerd_path/test/fuzztest/faultloggerddumpcatcher_fuzzer"
    include_dirs = [
      "./",
      "../common/include",
    ]
    defines = [ "FAULTLOGGERD_FUZZER" ]
    sources = [ "faultloggerddumpcatcher_fuzzer.cpp" ]
    deps = [
      "$faultloggerd_path/interfaces/innerkits/dump_catcher:libdfx_dumpcatcher",
    ]

    external_deps = [
      "bounds_checking_function:libsec_shared",
      "c_utils:utils",
    ]
  }

  group("fuzzDumpCatcherTest") {
    testonly = true
    deps = [ ":FaultloggerdDumpCatcherFuzzTest" ]
  }
}
