    "jsoncpp:jsoncpp",
  ]
  include_dirs = [
    "$faultloggerd_common_path/dfxlog",
    "$faultloggerd_interfaces_path/common",
    "$faultloggerd_interfaces_path/innerkits/faultloggerd_client",
    "$faultloggerd_interfaces_path/innerkits/faultloggerd_client/include",
