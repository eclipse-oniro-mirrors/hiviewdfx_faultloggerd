    "$faultloggerd_path/common/dfxlog",
    "$faultloggerd_path/services",
    "$faultloggerd_path/test/fuzztest/faultloggerdserver/common/include",
    "$faultloggerd_path/test/utils",
  ]
  defines = [
    "DFX_LOG_HILOG_BASE",
    "FAULTLOGGERD_TEST",
  ]
}
