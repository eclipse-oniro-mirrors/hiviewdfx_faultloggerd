import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")
  group("fuzztest") {
    deps = []
  }
} else {
  import("//build/config/features.gni")
  import("//build/test.gni")

  module_output_path = "faultloggerd/faultloggerd"

  ohos_fuzztest("FaultloggerdFuzzTest") {
    module_out_path = module_output_path
    fuzz_config_file = "$faultloggerd_path/test/fuzztest/faultloggerd_fuzzer"
    include_dirs = [
      "./",
      "$faultloggerd_path/services",
      "$faultloggerd_interfaces_path/common",
      "$faultloggerd_path/common/dfxlog",
      "$faultloggerd_path/common/dfxutil",
    ]
    defines = [ "FAULTLOGGERD_FUZZER" ]
    sources = [ "faultloggerd_fuzzer.cpp" ]
    deps = [
      "$faultloggerd_path/common/dfxlog:dfx_hilog",
      "$faultloggerd_path/common/dfxutil:dfx_util",
      "$faultloggerd_path/interfaces/innerkits/dump_catcher:libdfx_dumpcatcher",
      "$faultloggerd_path/interfaces/innerkits/faultloggerd_client:libfaultloggerd",
      "$faultloggerd_path/services:faultloggerd_fuzzer_src",
    ]

    external_deps = [
      "c_utils:utils",
      "hilog:libhilog",
    ]
  }

  group("fuzztest") {
    testonly = true
    deps = [ ":FaultloggerdFuzzTest" ]
  }
}
