import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (!defined(ohos_lite)) {
  import("//build/config/features.gni")
  import("//build/test.gni")

  config("dfx_sighook_config") {
    visibility = [ "*:*" ]

    include_dirs = [
      ".",
      "$faultloggerd_interfaces_path/common",
    ]
  }

  ohos_shared_library("dfxsighook") {
    public_configs = [
      ":dfx_sighook_config",
      "$faultloggerd_path/common/build:coverage_flags",
    ]
    install_enable = true
    defines = [ "DFX_LOG_HILOG_BASE" ]

    sources = [
      "dfx_hook_utils.c",
      "dfx_signal_hook.c",
    ]

    deps = [ "$faultloggerd_path/common/dfxlog:dfx_hilog_base" ]

    external_deps = [
      "c_utils:utils",
      "hilog:libhilog_base",
      "libunwind:libunwind",
    ]

    part_name = "faultloggerd"
    subsystem_name = "hiviewdfx"
  }

  ohos_shared_library("dfxexithook") {
    public_configs = [
      ":dfx_sighook_config",
      "$faultloggerd_path/common/build:coverage_flags",
    ]
    install_enable = true
    defines = [ "DFX_LOG_HILOG_BASE" ]

    sources = [
      "dfx_exit_hook.c",
      "dfx_hook_utils.c",
    ]

    deps = [ "$faultloggerd_path/common/dfxlog:dfx_hilog_base" ]

    external_deps = [
      "c_utils:utils",
      "hilog:libhilog_base",
      "libunwind:libunwind",
    ]

    part_name = "faultloggerd"
    subsystem_name = "hiviewdfx"
  }

  ohos_unittest("DfxFuncHookUnitTest") {
    testonly = true
    module_out_path = "faultloggerd/dfxfunchook"
    sources = [ "dfx_func_hook_unittest.cpp" ]

    configs = [
      ":dfx_sighook_config",
      "$faultloggerd_path/common/build:coverage_flags",
    ]

    deps = [
      ":dfxexithook",
      ":dfxsighook",
      "//third_party/googletest:gtest_main",
    ]

    external_deps = [ "c_utils:utils" ]

    if (use_musl) {
      resource_config_file =
          "//base/hiviewdfx/faultloggerd/test/funchook/ohos_test.xml"
    } else {
      resource_config_file =
          "//base/hiviewdfx/faultloggerd/test/funchook/ohos_bionic_test.xml"
    }

    part_name = "faultloggerd"
    subsystem_name = "hiviewdfx"
  }
}

group("dfxfunchook") {
  if (!defined(ohos_lite)) {
    testonly = true
    deps = [ ":DfxFuncHookUnitTest" ]
  }
}
