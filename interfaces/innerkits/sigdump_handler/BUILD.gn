import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (defined(ohos_lite)) {
  static_library("dfx_sigdump_handler") {
    # current static library is unuseful in ohos_lite type
  }
} else {
  dfx_sigdump_handler_sources = [ "dfx_sigdump_handler.cpp" ]
  config("dfx_sigdump_handler_config") {
    visibility = [ "*:*" ]

    include_dirs = [ "include" ]

    defines = [ "is_ohos=${is_ohos}" ]
  }

  ohos_static_library("dfx_sigdump_handler") {
    public_configs = [ ":dfx_sigdump_handler_config" ]

    sources = dfx_sigdump_handler_sources
    include_dirs = [
      "$faultloggerd_common_path/dfxlog",
      "$faultloggerd_common_path/dfxutil",
      "$faultloggerd_interfaces_path/common",
      "$faultloggerd_interfaces_path/innerkits/backtrace",
    ]

    deps = [
      "$faultloggerd_common_path/dfxlog:dfx_hilog",
      "$faultloggerd_interfaces_path/innerkits/backtrace:backtrace_local",
      "$faultloggerd_interfaces_path/innerkits/faultloggerd_client:libfaultloggerd",
    ]

    external_deps = [
      "bounds_checking_function:libsec_shared",
      "c_utils:utils",
      "hilog:libhilog",
    ]

    part_name = "faultloggerd"
    subsystem_name = "hiviewdfx"
  }
}
